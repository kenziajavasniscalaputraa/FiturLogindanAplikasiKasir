import tkinter as tk
from tkinter import messagebox
import time

MAX_ATTEMPTS = 3
COOLDOWN = 60   

# --- UI ---
root = tk.Tk()
root.title(" ðŸ’« Kenzia Javas Niscala Putra ðŸ’« ")
root.geometry("534x767")
root.configure(bg="#1e1e2f")
root.attempts = 0
root.cooldown = False



def login():    
    if root.cooldown:
        messagebox.showwarning("Cooldown", "Tunggu cooldown selesai!")
        return

    user = "Kenzia Javas"     
    pw = "2521"
    
    if user_entry.get() == user and pw_entry.get() == pw:
        messagebox.showinfo("Success", "Login Berhasil!")
        buka_menu()   
        root.withdraw()  

    else:
        root.attempts += 1
        messagebox.showerror("Error", f"Masukin username/password yang bener woi! ({root.attempts}/3)")

        if root.attempts >= MAX_ATTEMPTS:
            messagebox.showwarning("Cooldown", f"Terlalu banyak percobaan! Tunggu {COOLDOWN} detik.")
            mulai_cooldown()

def mulai_cooldown():
    root.cooldown = True
    login_button.config(state="disabled")
    
    for i in range(COOLDOWN, 0, -1):
        login_button.config(text=f"Tunggu {i}s")
        root.update()
        time.sleep(1)   

    login_button.config(text="Login", state="normal")
    root.cooldown = False
    root.attempts = 0


def buka_menu():
    menu_root = tk.Toplevel()   
    menu_root.title("Menu Utama")
    menu_root.geometry("534x767")
    menu_root.configure(bg="#1e1e2f")

    frame = tk.Frame(menu_root, bg="#1e1e2f")
    frame.pack(pady=5)  

    label = tk.Label(frame, text=" ðŸ’« Aplikasi Kasir Sederhana ðŸ’« ",
                     fg="white", bg="#1e1e2f", font=("Segoe UI", 12, "bold"))
    label.grid(row=0, column=0, columnspan=2)

    # Input
    labels = ["Nama Pembeli", "Nama Barang", "Jumlah Produk", "Harga Produk (Rp)", "Uang Pembeli (Rp)"]
    entries = []

    for i, text in enumerate(labels):
        label = tk.Label(frame, text=text, fg="white", bg="#1e1e2f")
        label.grid(row=i+1, column=0, sticky="w")
        entry = tk.Entry(frame)
        entry.grid(row=i+1, column=1, padx=5, pady=10)
        entries.append(entry)

    name_entry, barang_entry, jumlah_entry, harga_entry, uang_entry = entries


    def hitung_struk():
        try:
            jumlah = int(jumlah_entry.get())
            harga = int(harga_entry.get())
            uang = int(uang_entry.get())

            total = jumlah * harga
            kembalian = uang - total

        except:
            messagebox.showerror("Error", "Masukin angka ces!")
            return
        
        if kembalian < 0:
            messagebox.showwarning("Kurang", "Woi duitnya kurang!")
            return
        
        struk = (
            "========== STRUK PEMBELIAN ==========\n"
            f"Nama Pembeli : {name_entry.get()}\n"
            f"Barang       : {barang_entry.get()}\n"
            f"Jumlah       : {jumlah}\n"
            f"Harga Satuan : Rp {harga}\n"
            f"Total Harga  : Rp {total}\n"
            f"Uang Bayar   : Rp {uang}\n"
            f"Kembalian    : Rp {kembalian}\n"
            "======================================"
        )

        messagebox.showinfo("Struk Kembalian", struk)

    tombol_total = tk.Button(frame, text="Total",
                             command=hitung_struk,
                             bg="#00adb5",
                             fg="white",
                             activebackground="#007b83")
    tombol_total.grid(row=6, column=1, pady=10)


# LOGIN UI
# ==============================
frame = tk.Frame(root, bg="#1e1e2f")
frame.pack(pady=5)

login_label = tk.Label(frame, text=" ðŸ’« Login ðŸ’« ", font=("Segoe UI", 14),
                       fg="white", bg="#1e1e2f")
login_label.grid(row=0, column=0, columnspan=2)

user_label = tk.Label(frame, text="Username", fg="white", bg="#1e1e2f")
user_label.grid(row=1, column=0)
user_entry = tk.Entry(frame)
user_entry.grid(row=1, column=1, padx=5, pady=10)

pw_label = tk.Label(frame, text="Password", fg="white", bg="#1e1e2f")
pw_label.grid(row=2, column=0)
pw_entry = tk.Entry(frame, show="*")    
pw_entry.grid(row=2, column=1, padx=5, pady=10)

login_button = tk.Button(frame, text="Login",
                         font=("Segoe UI", 10, "bold"),
                         bg="#00adb5", fg="white",
                         activebackground="#007b83",
                         relief="flat", command=login)
login_button.grid(row=3, column=1, pady=10)

root.mainloop()
